@using Microsoft.AspNetCore.Mvc.Localization
@using OrchardCore.Email.Azure.ViewModels

@model AzureEmailSettingsViewModel

<div class="mb-3">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="IsEnabled" checked="@Model.IsEnabled" role="button" data-bs-toggle="collapse" data-bs-target="#Azure_Provider_Settings" aria-expanded="@Model.IsEnabled.ToString().ToLowerInvariant()" aria-controls="Azure_Provider_Settings" />
        <label class="form-check-label" asp-for="IsEnabled">@T["Enable Azure Provider"]</label>
    </div>
</div>

<div id="Azure_Provider_Settings" class="collapse @(Model.IsEnabled ? " show" : string.Empty)">

    <div class="mb-3" asp-validation-class-for="DefaultSender">
        <label asp-for="DefaultSender" class="form-label">@T["Sender email address"]</label>
        <input asp-for="DefaultSender" class="form-control" type="text" />
        <span asp-validation-for="DefaultSender"></span>
        <span class="hint">@T["The default email address to use as a sender, unless the email sender is set."]</span>
    </div>

    <div class="mb-3" asp-validation-class-for="ConnectionStringSecretName">
        <label asp-for="ConnectionStringSecretName" class="form-label">@T["Connection String Secret"]</label>
        @await Component.InvokeAsync("SelectSecret", new
        {
            secretTypes = new[] { "TextSecret" },
            selectedSecret = Model.ConnectionStringSecretName,
            htmlId = "ConnectionStringSecretName",
            htmlName = Html.NameFor(m => m.ConnectionStringSecretName).ToString(),
            required = false
        })
        <span asp-validation-for="ConnectionStringSecretName"></span>
        <span class="hint">@T["Select a secret containing the Azure Communication Services connection string."]</span>
        @if (Model.HasConnectionString && string.IsNullOrWhiteSpace(Model.ConnectionStringSecretName))
        {
            <div class="alert alert-warning mt-2">
                <i class="fa-solid fa-exclamation-triangle"></i>
                @T["A legacy connection string is configured. Please migrate to using a secret for improved security."]
            </div>
        }
    </div>

</div>
