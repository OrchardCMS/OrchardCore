@using OrchardCore.DisplayManagement.Views
@using OrchardCore.Search.AzureAI.Deployment

@model ShapeViewModel<AzureAISearchIndexRebuildDeploymentStep>

@{
    var includeAll = Model.Value.IncludeAll;
    var indices = Model.Value.Indices;
}

<h5>@T["Rebuild Azure AI Search Indices"]</h5>

@if (includeAll)
{
    <span class="badge text-bg-success">@T["All"]</span>
}
else if (indices?.Length > 0)
{
    foreach (var indexName in indices)
    {
        <span class="badge ta-badge">@indexName</span>
    }
}
else
{
    <span class="badge text-bg-warning">@T["No index selected."]</span>
}
