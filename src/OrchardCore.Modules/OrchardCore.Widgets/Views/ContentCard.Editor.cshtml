@using OrchardCore.Widgets.Models
@inject OrchardCore.ContentManagement.Display.IContentItemDisplayManager ContentItemDisplayManager
@inject OrchardCore.DisplayManagement.IShapeFactory ShapeFactory

@{
    Model.Metadata.Alternates.Clear();
    Model.Metadata.Type = "ContentCard_Edit";
}

@await DisplayAsync(Model)

@{
    var inputShape = await ShapeFactory.CreateAsync<ContentCardFieldsEditShape>("ContentCard_Fields_Edit", shape =>
    {
        shape.CardShape = Model;
    });
}
@await DisplayAsync(inputShape)
