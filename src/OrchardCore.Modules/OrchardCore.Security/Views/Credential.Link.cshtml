@using Microsoft.Extensions.Options
@using OrchardCore.Security.Core

@inject IOptions<SecurityOptions> SecurityOptions
@{
    string providerName = Model.ProviderName;

    if (!SecurityOptions.Value.CredentialProviders.TryGetValue(providerName, out var provider))
    {
        return;
    }
}

<div class="col">
    <div class="card h-100">
        <div class="card-body">
            <h4>@(provider.DisplayName)</h4>
            <p class="hint">@(provider.Description)</p>

        </div>

        <div class="card-footer text-muted text-sm-end">
            <a class="btn btn-primary btn-sm"
               asp-route-action="Create"
               asp-route-providerName="@providerName">@T["Add"]</a>
        </div>

    </div>
</div>
