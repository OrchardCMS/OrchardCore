@model OrchardCore.Secrets.Deployment.SecretsDeploymentStep

<div class="alert alert-info" role="alert">
    <p>@T["This deployment step exports all secrets metadata."]</p>
    <p class="mb-0">@T["<strong>Note:</strong> For security reasons, actual secret values are not exported. During import, secret values must be provided via environment variables using the pattern <code>OrchardCore_Secrets__{{SecretName}}</code> or <code>OrchardCore:Secrets:{{SecretName}}</code>."]</p>
</div>
