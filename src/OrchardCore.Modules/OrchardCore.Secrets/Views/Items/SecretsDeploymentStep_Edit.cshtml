@model OrchardCore.Secrets.ViewModels.SecretsDeploymentStepViewModel

<div class="mb-3">
    <label asp-for="EncryptionKeyName" class="form-label">@T["Encryption Key"]</label>
    <select asp-for="EncryptionKeyName" class="form-select">
        <option value="">@T["(No encryption - metadata only)"]</option>
        @foreach (var key in Model.AvailableEncryptionKeys)
        {
            <option value="@key" selected="@(key == Model.EncryptionKeyName)">@key</option>
        }
    </select>
    <span class="hint">@T["Select an RSA key or X509 certificate to encrypt secret values during export. The same key must exist on the target system for import to succeed."]</span>
</div>

@if (!Model.AvailableEncryptionKeys.Any())
{
    <div class="alert alert-warning" role="alert">
        <i class="fa-solid fa-triangle-exclamation"></i>
        @T["No encryption keys available. Create an RSA key or X509 certificate secret first to enable encrypted exports."]
    </div>
}

<div class="alert alert-info" role="alert">
    <h5>@T["Export Modes"]</h5>
    <p><strong>@T["With encryption key:"]</strong> @T["Secret values are encrypted using hybrid RSA+AES encryption and included in the export. The target system must have the same key (with private key) to decrypt."]</p>
    <p class="mb-0"><strong>@T["Without encryption key:"]</strong> @T["Only secret metadata (names, types) is exported. During import, values must be provided via environment variables using the pattern <code>OrchardCore_Secrets__{{SecretName}}</code>."]</p>
</div>
