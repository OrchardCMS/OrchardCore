@using OrchardCore.DisplayManagement.Views
@model ShapeViewModel<OrchardCore.Secrets.Deployment.SecretsDeploymentStep>

<p class="m-0">
    @T["Adds all secrets to the deployment plan."]
    @if (!string.IsNullOrEmpty(Model.Value.EncryptionKeyName))
    {
        <br />
        <span class="badge text-bg-success">@T["Encrypted"]</span>
        <small class="text-muted">@T["using key: {0}", Model.Value.EncryptionKeyName]</small>
    }
    else
    {
        <br />
        <span class="badge text-bg-secondary">@T["Metadata only"]</span>
    }
</p>
