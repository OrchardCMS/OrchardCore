@using OrchardCore.DisplayManagement.Zones
@* This is the container shape for secret type editors. *@
@* Content from display drivers will be rendered in the Content zone. *@

@if (Model is IZoneHolding zoneHolding)
{
    @await DisplayAsync(zoneHolding.Zones["Content"])
}
else if (Model.Content != null)
{
    @await DisplayAsync(Model.Content)
}
else
{
    @* Fallback: iterate through shape items *@
    foreach (var shape in Model)
    {
        @await DisplayAsync(shape)
    }
}
