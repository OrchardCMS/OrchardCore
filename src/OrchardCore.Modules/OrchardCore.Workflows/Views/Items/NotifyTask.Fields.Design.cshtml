@using OrchardCore.Workflows.Activities
@using OrchardCore.DisplayManagement.Notify
@{
    var activity = (NotifyTask)Model.Activity;
    string className = "info";

    switch (activity.NotificationType)
    {
        case NotifyType.Error:
            className = "exclamation-circle";
            break;
        case NotifyType.Success:
            className = "check-circle";
            break;
        case NotifyType.Warning:
            className = "warning";
            break;
    }
}
<header>
    <h4><i class="fa fa-@className"></i>@T["{0} Notification", activity.NotificationType]</h4>
</header>
<em>&quot;@activity.Message&quot;</em>