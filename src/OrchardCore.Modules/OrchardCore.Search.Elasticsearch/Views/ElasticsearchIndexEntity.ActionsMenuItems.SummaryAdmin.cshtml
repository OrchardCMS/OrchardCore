@using OrchardCore.DisplayManagement.Views
@using OrchardCore.Indexing.Models

@model ShapeViewModel<IndexEntity>

<a asp-action="Query"
   asp-route-id="@Model.Value.Id"
   asp-action="Query"
   asp-controller="Admin"
   asp-area="OrchardCore.Search.Elasticsearch"
   class="dropdown-item btn-sm">@T["Query Index"]</a>


<a asp-action="IndexInfo"
   asp-route-id="@Model.Value.Id"
   asp-action="Info"
   asp-controller="Admin"
   asp-area="OrchardCore.Search.Elasticsearch"
   class="dropdown-item btn-sm">@T["Index Info"]</a>
