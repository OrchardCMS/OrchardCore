@model OrchardCore.Search.Elasticsearch.Core.Models.ContentPickerFieldElasticEditorSettings

<div class="field-editor field-editor-elasticsearch">
    <div class="mb-3">
        <div class="w-sm-50">
            <label asp-for="Index" class="form-label">@T["Index"]</label>
            <select asp-for="Index" class="form-select">
                @foreach (var index in Model.Indices)
                {
                    <option value="@index">@index</option>
                }
            </select>
        </div>
        <span class="hint">@T["The Elasticsearch index to query for content items"]</span>
    </div>
</div>
