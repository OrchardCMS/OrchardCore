@model OrchardCore.Flows.ViewModels.FlowPartSettingsViewModel

<div class="mb-3">
    <label asp-for="ContainedContentTypes" class="form-label">@T["Restrict Content Types"]</label>
    <span class="hint">@T["The content types that this flow can contain."]</span>
    @await Component.InvokeAsync("SelectContentTypes", new { selectedContentTypes = Model.ContainedContentTypes, htmlName = Html.NameFor(m => m.ContainedContentTypes), stereotype = "Widget" })
</div>

<div class="form-check">
    <input type="checkbox" class="form-check-input" asp-for="CollapseContainedItems">
    <label class="form-check-label" asp-for="CollapseContainedItems">@T["Collapse Contained Items"]</label>
    <span class="hint">@T["When checked, the contained items will be collapsed when the edit form is loaded."]</span>
</div>
