@using OrchardCore.ContentManagement.Metadata.Settings
@using OrchardCore.DisplayManagement.Theming
@using OrchardCore.Flows.Extensions
@using OrchardCore.Flows.Models
@using OrchardCore.Flows.ViewModels
@using OrchardCore.Mvc.Utilities
@model BagPartEditViewModel
@inject IContentManager ContentManager
@inject OrchardCore.ContentManagement.Display.IContentItemDisplayManager ContentItemDisplayManager
@inject IThemeManager ThemeManager
@{
    var widgetTemplatePlaceholderId = Html.Id("widgetTemplatePlaceholder");
    var htmlFieldPrefix = ViewContext.ViewData.TemplateInfo.HtmlFieldPrefix;
    var contentTypesStringified = string.Join(";", Model.ContainedContentTypeDefinitions.Select(x => x.Name));
    var parentContentType = Model.BagPart.ContentItem.ContentType;
    string partName = ((dynamic)Model).Metadata.Name;
    var totalItems = Model.ContainedContentTypeDefinitions.Count();

    // Generate unique ID for this instance's modal
    var uniqueId = Guid.NewGuid().ToString("n");
    var modalId = $"contentTypePickerModal_{uniqueId}";

    // Get theme for default image paths
    var theme = await ThemeManager.GetThemeAsync();
    var themeId = theme?.Id ?? "TheTheme";
}

<script asp-name="jQuery-ui" at="Foot"></script>

<div class="mb-3">
    <div id="@widgetTemplatePlaceholderId"
         class="widget-template-placeholder widget-template-placeholder-bagpart bagpart-@partName.HtmlClassify() row mx-0"
         data-buildeditorurl="@Url.Action("BuildEditor", "Admin", new { area = "OrchardCore.Flows" })"
         data-content-types="@contentTypesStringified">
        @{
            var index = 0;
        }
        @foreach (var widget in Model.AccessibleWidgets)
        {
            dynamic contentCard = await New.ContentCard(
                CollectionShape: Model,
                CollectionShapeType: nameof(BagPart),
                ContentItem: widget.ContentItem,
                BuildEditor: widget.Editable,
                ParentContentType: parentContentType,
                CollectionPartName: partName,
                TargetId: widgetTemplatePlaceholderId,
                Inline: false,
                CanMove: widget.Editable,
                CanDelete: widget.Deletable,
                HtmlFieldPrefix: htmlFieldPrefix,
                PrefixValue: htmlFieldPrefix + '-' + (index++).ToString(),
                PrefixesId: Html.IdFor(x => x.Prefixes),
                PrefixesName: Html.NameFor(x => x.Prefixes),
                ContentTypesId: Html.IdFor(x => x.ContentTypes),
                ContentTypesName: Html.NameFor(x => x.ContentTypes),
                ContentItemsId: Html.IdFor(x => x.ContentItems),
                ContentItemsName: Html.NameFor(x => x.ContentItems)
            );
            @await DisplayAsync(contentCard)
        }
    </div>

    @if (totalItems == 1)
    {
        @* Single content type - direct add button (same as standard BagPart) *@
        var type = Model.ContainedContentTypeDefinitions.First();
        <a class="btn btn-primary add-widget btn-sm"
           data-target-id="@widgetTemplatePlaceholderId"
           data-html-field-prefix="@htmlFieldPrefix"
           data-prefixes-name="@Html.NameFor(x => x.Prefixes)"
           data-contenttypes-name="@Html.NameFor(x => x.ContentTypes)"
           data-contentitems-name="@Html.NameFor(x => x.ContentItems)"
           data-widget-type="@type.Name"
           data-flowmetadata="false"
           data-parent-content-type="@parentContentType"
           data-part-name="@partName"
           href="javascript:;">
            <i class="fa fa-plus" aria-hidden="true"></i> @T["Add {0}", type.DisplayName]
        </a>
    }
    else if (totalItems > 1)
    {
        @* Multiple content types - show content type picker modal *@
        <button type="button"
                class="btn btn-primary btn-sm open-content-type-picker"
                data-bs-toggle="modal"
                data-bs-target="#@modalId"
                data-target-id="@widgetTemplatePlaceholderId"
                data-html-field-prefix="@htmlFieldPrefix"
                data-prefixes-name="@Html.NameFor(x => x.Prefixes)"
                data-contenttypes-name="@Html.NameFor(x => x.ContentTypes)"
                data-contentitems-name="@Html.NameFor(x => x.ContentItems)"
                data-parent-content-type="@parentContentType"
                data-part-name="@partName"
                data-modal-id="@modalId">
            <i class="fa fa-plus" aria-hidden="true"></i> @T["Add Block"]
        </button>
    }
</div>

@* Modal shell for this BagPart instance *@
@if (totalItems > 1)
{
    <div class="modal fade modal-content-type-picker" id="@modalId" tabindex="-1" aria-labelledby="@(modalId)Label" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="@(modalId)Label">@T["Select Block"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@T["Close"]"></button>
                </div>
                <div class="modal-body">
                    @* contentTypePickerApp will be moved here when modal opens *@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@T["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
}

@* Shared resources - rendered once per page *@
@if (Context.Items["BagPart.Edit"] == null)
{
    Context.Items["BagPart.Edit"] = new object();
    <script asp-name="flowpart-edit" at="Foot"></script>
    <style asp-name="flowpart-edit" at="Head"></style>
}

@* Content type picker resources - rendered once per page *@
@if (Context.Items["ContentTypePicker.Init"] == null)
{
    Context.Items["ContentTypePicker.Init"] = new object();
    <script asp-name="contenttypepicker" at="Foot"></script>
    <style asp-name="contenttypepicker" at="Head"></style>

    @* Render shared content type picker app once *@
    @await DisplayAsync(await New.ContentTypePicker())

    <script at="Foot">
        initializeContentTypePickerApplication('@Context.Request.PathBase');
    </script>
}

@* Render mock widgets to ensure resources are included *@
@foreach (var type in Model.ContainedContentTypeDefinitions)
{
    @if (Context.Items["BagPart.Edit:" + type.Name] == null)
    {
        Context.Items["BagPart.Edit:" + type.Name] = new object();
        var contentItem = await ContentManager.NewAsync(type.Name);
        await DisplayAsync(await ContentItemDisplayManager.BuildEditorAsync(contentItem, Model.Updater, true, string.Empty, $"z{Guid.NewGuid():n}"));
    }
}

@* Instance-specific initialization *@
<script at="Foot">
(function() {
    var modalId = '@modalId';
    var modalElement = document.getElementById(modalId);

    if (!modalElement) return;

    // Build content types array for this BagPart instance
    var contentTypes = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.ContainedContentTypeDefinitions.Select(t => new {
            name = t.Name,
            displayName = t.DisplayName,
            description = t.GetSettings<ContentTypeSettings>()?.Description ?? "",
            category = t.GetCategory(),
            previewImage = t.GetPreviewImage(themeId)
        }),
        new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }
    ));

    // Configuration for this instance
    var instanceConfig = {
        targetId: '@widgetTemplatePlaceholderId',
        htmlFieldPrefix: '@htmlFieldPrefix',
        prefixesName: '@Html.NameFor(x => x.Prefixes)',
        contentTypesName: '@Html.NameFor(x => x.ContentTypes)',
        contentItemsName: '@Html.NameFor(x => x.ContentItems)',
        parentContentType: '@parentContentType',
        partName: '@partName',
        modalId: modalId,
        contentTypes: contentTypes,
        onContentTypeSelected: contentTypePickerSelectContentType
    };

    // On modal show: configure and reparent contentTypePickerApp
    modalElement.addEventListener('show.bs.modal', function() {
        var contentTypePickerEl = document.getElementById('contentTypePickerApp');
        if (contentTypePickerEl && contentTypePickerApp) {
            // Move contentTypePickerApp into this modal
            modalElement.querySelector('.modal-body').appendChild(contentTypePickerEl);
            contentTypePickerEl.classList.remove('d-none');

            // Configure with this instance's content types
            contentTypePickerApp.configure(instanceConfig);
        }
    });

    // On modal hide: reparent contentTypePickerApp back to body
    modalElement.addEventListener('hidden.bs.modal', function() {
        var contentTypePickerEl = document.getElementById('contentTypePickerApp');
        if (contentTypePickerEl) {
            document.body.appendChild(contentTypePickerEl);
            contentTypePickerEl.classList.add('d-none');
        }
    });

    // Sortable for drag-drop reordering
    var widgetTemplatePlaceholder = document.getElementById('@widgetTemplatePlaceholderId');
    if (widgetTemplatePlaceholder && $('#@widgetTemplatePlaceholderId').length === 1) {
        $('#@widgetTemplatePlaceholderId').sortable({
            handle: ".widget-editor-handle",
            cursor: "move",
            opacity: 0.7,
            tolerance: "pointer",
            scrollSensitivity: 150,
            scrollSpeed: 100,
            animation: 150,
            placeholder: {
                element: function(currentItem) {
                    return $('<div class="widget-dragdrop-placeholder"><div></div></div>')[0];
                },
                update: function(container, p) {
                    return;
                }
            },
            toleranceElement: '> div',
            connectWith: '.widget-template-placeholder.widget-template-placeholder-bagpart',
            start: function(event, ui) {
                widgetDragItem = ui.item;
                lastContainer = ui.item.parent();
                lastContainer.toggleClass('widget-dropzone-hint');
                draggedWidget = widgetDragItem.find('.card').first();
                draggedWidget.toggleClass('border-primary');
                widgetItemSourceId = widgetDragItem.parent().attr('id');
                var classList = widgetDragItem.attr('class').split(' ');
                $.each(classList, function(id, item) {
                    if (item.indexOf('col-md-') === 0) ui.placeholder.addClass(item);
                });
            },
            stop: function(event, ui) {
                lastContainer.toggleClass('widget-dropzone-hint');
                widgetDragItem.find('.card').first().toggleClass('border-primary');
                widgetItemDestId = widgetDragItem.parent().attr('id');

                if (widgetItemDestId !== widgetItemSourceId) {
                    if (lastContainer[0] != this && this.dataset.contentTypes.split(';').indexOf(draggedWidget[0].dataset.contentType) >= 0) {
                        var inputs = widgetDragItem.children("input[name*='@partName']");
                        var destination = $('#' + widgetItemDestId);
                        var source = $('#' + widgetItemSourceId);
                        var sourceGuid = widgetItemSourceId.substring(0, widgetItemSourceId.lastIndexOf('_') + 1);
                        var sourceNameGuid = sourceGuid.replaceAll('_', '.');

                        if (destination.length > 0) {
                            var destGuid = widgetItemDestId.substring(0, widgetItemDestId.lastIndexOf('_') + 1);
                            var destNameGuid = destGuid.replaceAll('_', '.');

                            if (source.length > 0) {
                                inputs.each(function(index, item) {
                                    $(this).attr('id', $(this).attr('id').replace(sourceGuid, destGuid));
                                    $(this).attr('name', $(this).attr('name').replace(sourceNameGuid, destNameGuid));
                                });
                            } else {
                                inputs.each(function(index, item) {
                                    $(this).attr('id', destGuid + $(this).attr('id'));
                                    $(this).attr('name', destNameGuid + $(this).attr('name'));
                                });
                            }
                        } else if (source.length > 0) {
                            inputs.each(function(index, item) {
                                $(this).attr('id', $(this).attr('id').replace(sourceGuid, ''));
                                $(this).attr('name', $(this).attr('name').replace(sourceNameGuid, ''));
                            });
                        }
                    } else {
                        event.preventDefault();
                    }
                }

                if (lastContainer[0] != this) {
                    $(document).trigger('contentpreview:render');
                }

                widgetDragItem = null;
                draggedWidget = null;
                lastContainer = null;
                widgetItemSourceId = null;
                widgetItemDestId = null;
            },
            over: function(event, ui) {
                var $self = $(this);
                if (lastContainer[0] != this && this.dataset.contentTypes.split(';').indexOf(draggedWidget[0].dataset.contentType) >= 0) {
                    lastContainer.toggleClass('widget-dropzone-hint');
                    lastContainer = $self;
                    $self.toggleClass('widget-dropzone-hint');
                }
            }
        });
    }
})();
</script>
