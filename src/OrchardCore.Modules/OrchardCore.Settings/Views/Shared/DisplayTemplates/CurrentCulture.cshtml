@using System.Globalization
@{
    var culture = Model != null ? @CultureInfo.GetCultureInfo(Model) : CultureInfo.InvariantCulture;
}
<tr class="table-success">
    <td class="align-middle">
        <strong>
            @if (!string.IsNullOrEmpty(culture.Name))
            {<text>@culture.Name</text>}
        </strong>
    </td>
    <td class="align-middle"><strong>@culture.DisplayName</strong></td>
    <td class="align-middle"><strong>@Model</strong></td>
    <td class="align-middle">&nbsp;</td>
</tr>
