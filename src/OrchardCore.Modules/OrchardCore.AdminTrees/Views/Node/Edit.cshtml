@model AdminNodeEditViewModel

<h1>@RenderTitleSegments(T["Edit Node"])</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Edit" method="post">
    @await DisplayAsync(Model.Editor.Content)

    <input type="hidden" asp-for="AdminTreeId" />
    <input type="hidden" asp-for="AdminNodeId" />
    <input type="hidden" asp-for="AdminNodeType" />

    <fieldset>
        <div class="form-group">
            <label asp-for="SelectionPriority">@T["Selection Priority"]</label>
            <input asp-for="SelectionPriority" class="form-control col-sm-1" >
            <span class="hint">@T["There can be only one item selected at the same time. In case there are more than one competing the system will use this value to determine which one wins."]</span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>

            <a asp-action="Delete"
               asp-controller="Node"
               asp-route-id="@Model.AdminTreeId"
               asp-route-treeNodeId="@Model.AdminNodeId"
               class="btn btn-danger"
               itemprop="RemoveUrl UnsafeUrl">@T["Delete"]</a>

            <a class="btn btn-secondary"
               asp-route-action="List"
               asp-route-id="@Model.AdminTreeId">@T["Cancel"]</a>

        </div>
    </fieldset>
</form>