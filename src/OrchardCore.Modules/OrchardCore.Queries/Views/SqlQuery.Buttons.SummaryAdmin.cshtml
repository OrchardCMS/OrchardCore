@using OrchardCore.Queries
@using OrchardCore.Queries.Sql.Models
@using OrchardCore.Entities
@model dynamic

@{
    var query = Model.Query as Query;
    var metadata = query.As<SqlQueryMetadata>();
    var base64Query = Convert.ToBase64String(System.Text.Encoding.UTF8.GetBytes(metadata.Template ?? string.Empty));
}

<a asp-action="Query"
   asp-controller="Admin"
   asp-area="OrchardCore.Queries"
   asp-route-query="@base64Query"
   class="btn btn-success btn-sm">@T["Run"]</a>
