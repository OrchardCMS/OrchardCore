@model QueriesCreateViewModel

<zone Name="Title"><h1>@RenderTitleSegments(T["New {0} query", Model.SourceName])</h1></zone>

<form asp-action="Create" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post" enctype="multipart/form-data" class="no-multisubmit">
    @Html.ValidationSummary()
    @if (Model.Editor.Content != null)
    {
        @await DisplayAsync(Model.Editor.Content)
    }

    @if (Model.Editor.Content != null)
    {
        <div class="form-group">
            @await DisplayAsync(Model.Editor.Actions)
        </div>
    }

    <input type="hidden" asp-for="SourceName" />
</form>
