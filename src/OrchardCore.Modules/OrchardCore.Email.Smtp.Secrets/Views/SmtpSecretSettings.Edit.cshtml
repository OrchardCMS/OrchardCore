@model OrchardCore.Email.Smtp.Secrets.ViewModels.SmtpSecretSettingsViewModel

<div class="mb-3">
    <label asp-for="PasswordSecretName" class="form-label">@T["Password Secret"]</label>
    <select asp-for="PasswordSecretName" class="form-select">
        <option value="">@T["(Use password from settings)"]</option>
        @foreach (var secret in Model.AvailableSecrets)
        {
            <option value="@secret" selected="@(secret == Model.PasswordSecretName)">@secret</option>
        }
    </select>
    <span class="hint">@T["Select a secret to use for the SMTP password. When set, this overrides the password stored in SMTP settings."]</span>
</div>
