@model AuditTrailEventViewModel

<div class="card mb-3">
    <div class="card-header" id="headingEvent">
        <h6 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseEvent" aria-expanded="true" aria-controls="collapseEvent">
            @T["Event Details"]
            </button>
        </h6>
    </div>
    <div id="collapseEvent" class="collapse show" aria-labelledby="headingEvent" data-parent="#accordion">
        <div class="card-body py-0">
            <table class="table table-sm table-hover mb-0">
                <tbody>
                    <tr>
                        <th class="border-top-0 w-25">@T["Category"]</th>
                        <td class="border-top-0">@Model.Descriptor.LocalizedCategory</td>
                    </tr>
                    <tr>
                        <th>@T["Event"]</th>
                        <td>@Model.Descriptor.LocalizedName</td>
                    </tr>
                    <tr>
                        <th>@T["User Name"]</th>
                        <td>@Model.AuditTrailEvent.UserName</td>
                    </tr>
                    <tr>
                        <th>@T["User ID"]</th>
                        <td>@Model.AuditTrailEvent.UserName TODO this needs to record UserId as well</td>
                    </tr>
                    <tr>
                        <th>@T["Timestamp"]</th>
                        <td>@await DisplayAsync(await New.DateTime(Utc: Model.AuditTrailEvent.CreatedUtc, Format: "g"))</td>
                    </tr>
                    <tr>
                        <th>@T["Client IP Address"]</th>
                        <td>@Model.AuditTrailEvent.ClientIpAddress</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
