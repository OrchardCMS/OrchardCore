@model LocalizationSettingsViewModel
@using System.Text.Json
@using System.Text.Json.Nodes
@using System.Globalization

@{
    // ['fr-FR', 'en-US']
    var supportedCultures = JConvert.SerializeObject(Model.Cultures
        .Where(x => x.Supported)
        .Select(c => c.CultureInfo.Name)
        .ToArray());
    var allCultures = JConvert.SerializeObject(Model.Cultures
        .Select(c => new
        {
            Name = c.CultureInfo.Name,
            DisplayName = !string.IsNullOrEmpty(c.CultureInfo.DisplayName)
                ? c.CultureInfo.DisplayName
                : c.CultureInfo.NativeName, Supported = c.Supported
        })
        .ToArray(), JsonSerializerOptions.Default);
    var defaultCulture = Model.Cultures.FirstOrDefault(x => x.IsDefault).CultureInfo.Name;
    var selectedCulture = Model.Cultures.Except(Model.Cultures.Where(x => x.Supported)).First().CultureInfo.Name;
}

<script asp-src="~/OrchardCore.Localization/Scripts/optionsEditor.min.js" debug-src="~/OrchardCore.Localization/Scripts/optionsEditor.js" asp-name="optionsEditor" at="Foot" depends-on="vuejs:2"></script>

<script at="Foot">
    initializeOptionsEditor(document.getElementById('@Html.IdFor(m => m)'), @Html.Raw(supportedCultures), '@defaultCulture', '@selectedCulture', @Html.Raw(allCultures));
</script>

<script>
    
    document.addEventListener('DOMContentLoaded', (e) => {
        
        const cultureTable = document.getElementById('cultureListTable');
        
        if(!cultureTable) return;
        
        const cultureSelectors = cultureTable.querySelectorAll('.form-check-input');

        const saveButton = document.querySelector('button.primaryAction.save[type="submit"]');

        if(!saveButton) return;

        for(const selector of cultureSelectors) {
            
            selector.addEventListener('change', e => {
                saveButton.click();
            })
            
        }
        
    })
    
</script>

<script at="Foot" >
    
    document.addEventListener('DOMContentLoaded', function() {
        
        const modal = document.getElementById('addCultureModal');
            
        if(!modal) return;
        
        const cultureTable = document.getElementById('cultureListTable');
        
        if(!cultureTable) return;
        
        const startingCultureCount = cultureTable.children.length;
        
        function triggerSave() {

            const saveButton = document.querySelector('button.primaryAction.save[type="submit"]');

            const currentCultureCount = cultureTable.children.length;
            
            if (saveButton && startingCultureCount !== currentCultureCount) {
                saveButton.click();
            }
            
        }
        
        modal.addEventListener('hidden.bs.modal', function(e) {
            triggerSave();
        })
        
        const closeButton = modal.querySelector('.btn-close');
        
        closeButton.addEventListener('click', function(e) {
            triggerSave();
        })
        
    });
    
</script>

<script type="text/x-template" id="options-table">
    <div class="mb-3">
        <table class="table border-bottom">
            <thead>
                <tr>
                    <th>@T["Culture"]</th>
                    <th>@T["Default culture"]</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody id="cultureListTable">
            <tr v-for="(culture, index) in data" :key="index">
                <td>
                    <span v-if="culture != ''">{{ culture }}</span>
                    <span v-if="culture == ''">@CultureInfo.InvariantCulture.DisplayName</span>
                    <input type="hidden" class="form-control" v-bind:value="culture"/>
                </td>
                <td>
                    <div class="form-check ms-5">
                        <input type="radio" class="form-check-input" :id="'customRadio_' + index" v-bind:value="culture"
                               v-model="defaultCulture">
                        <label class="form-check-label" title="Set as default"
                               v-bind:for="'customRadio_' + index"></label>
                    </div>
                </td>
                <td class="text-end">
                    <a v-on:click="remove(index)" title="@T["Remove culture"]" href="javascript:void(0)"
                       class="btn btn-secondary btn-sm" style="cursor:pointer">
                        <i class="fa-solid fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
            </tbody>
        </table>

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCultureModal">
            @T["Add culture"]
        </button>

        <div class="modal fade" id="addCultureModal" tabindex="-1" aria-labelledby="myCustomModalLabel"
             aria-hidden="true">

            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@T["Add culture"]</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                        
                            <div class="col">
                                <select v-model="selectedCulture" class="form-select col" v-on:change="add()">
                                    <option v-for="(culture, index) in allCultures" v-bind:value="culture.Name"
                                            :key="index"
                                            v-if="!(culture.Supported)">
                                        {{ culture.Name }} ({{ culture.DisplayName }})
                                    </option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
            
        </div>

   

        <input class="form-control" id="@Html.IdFor(m => m.SupportedCultures)"
               name="@Html.NameFor(m => m.SupportedCultures)" type="hidden" v-bind:value="getSupportedCultures()" />
        <input class="form-control" id="@Html.IdFor(m => m.DefaultCulture)" name="@Html.NameFor(m => m.DefaultCulture)"
               type="hidden" v-bind:value="getDefaultCulture()"/>
               
    </div>

</script>

<div id="@Html.IdFor(m => m)" class="field-editor field-editor-predefinedlist">

    <div class="row">
        <div class="col-xl-6">
            <label class="form-label">@T["Define which cultures are supported by the site."]</label>
            <options-table :data="supportedCultures" :default-value="defaultCulture" :selectedCulture="selectedCulture" :list="allCultures"></options-table>
        </div>
    </div>
</div>

<div class="mb-3" asp-validation-class-for="FallBackToParentCultures">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="FallBackToParentCultures" />
        <label class="form-check-label" asp-for="FallBackToParentCultures">@T["Fall back to parent culture(s)"]</label>
    </div>
</div>
