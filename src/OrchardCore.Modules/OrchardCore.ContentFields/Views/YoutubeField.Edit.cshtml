@model OrchardCore.ContentFields.ViewModels.EditYoutubeFieldViewModel
@using OrchardCore.Mvc.Utilities
@using OrchardCore.Localization.Data
@inject IDataLocalizer D
@{
    var settings = Model.PartFieldDefinition.GetSettings<YoutubeFieldSettings>();
    string localizedFieldName = D[Model.PartFieldDefinition.DisplayName(), $"Content Fields{Constants.ContextSeparator}{Model.PartFieldDefinition.PartDefinition.Name}"];
}

<div class="@Orchard.GetFieldWrapperClasses(Model.PartFieldDefinition)" id="@Html.IdFor(x => x.RawAddress)_FieldWrapper">
    <label asp-for="RawAddress" class="@Orchard.GetLabelClasses(inputRequired: settings.Required)">@localizedFieldName</label>
    <div class="@Orchard.GetEndClasses()">
        <input asp-for="RawAddress" placeholder="@settings.Placeholder" class="form-control content-preview-text" />
        <span asp-validation-for="RawAddress"></span>
        @if (!string.IsNullOrEmpty(settings.Hint))
        {
            <span class="hint">@settings.Hint</span>
        }
    </div>
</div>
