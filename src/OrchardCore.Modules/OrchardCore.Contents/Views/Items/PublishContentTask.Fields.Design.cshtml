@model ContentTaskViewModel<PublishContentTask>

<header>
    <h4><i class="fa-solid fa-cloud-upload" aria-hidden="true"></i>@Model.Activity.GetTitleOrDefault(() => T["Publish Content"])</h4>
</header>

@if (string.IsNullOrWhiteSpace(Model.Activity.Content?.Expression))
{
    <span>@T["Publish content provided via the <em>ContentItem</em> input argument"]</span>
}
else
{
    <span>@T["Publish content using expression: <em>{0}</em>", Model.Activity.Content.Expression]</span>
}
