@model ShapeViewModel<ContentDeploymentStep>
@inject OrchardCore.ContentManagement.Metadata.IContentDefinitionManager ContentDefinitionManager

@{
    var contentTypes = Model.Value.ContentTypes;
}

<h5>@T["Content"]</h5>
@if (contentTypes != null && contentTypes.Length > 0)
{
    @foreach (var contentTypeDefinition in await ContentDefinitionManager.ListTypeDefinitionsAsync())
    {
        if (contentTypes.Contains(contentTypeDefinition.Name))
        {
            <span class="badge ta-badge">@contentTypeDefinition.DisplayName</span>
        }
    }
}
else
{
    <span class="badge text-bg-warning">@T["Nothing here!"]</span>
}
