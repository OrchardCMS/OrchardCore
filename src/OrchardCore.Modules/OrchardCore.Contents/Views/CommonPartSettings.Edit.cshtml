@model OrchardCore.Contents.ViewModels.CommonPartSettingsViewModel

<div class="mb-3">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="DisplayDateEditor" checked="@Model.DisplayDateEditor">
        <label class="form-check-label" asp-for="DisplayDateEditor">@T["Display date editor"]</label>
        <span class="hint dashed">@T["Check to be able to edit the creation date of the content item."]</span>
    </div>
</div>
<div class="mb-3">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="DisplayOwnerEditor" checked="@Model.DisplayOwnerEditor">
        <label class="form-check-label" asp-for="DisplayOwnerEditor">@T["Display owner editor"]</label>
        <span class="hint dashed">@T["Check to be able to edit the owner of the content item. The <code>EditContentOwner</code> permission will also be required."]</span>
    </div>
</div>
