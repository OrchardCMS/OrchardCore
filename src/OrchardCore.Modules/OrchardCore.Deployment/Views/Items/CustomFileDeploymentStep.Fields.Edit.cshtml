@model CustomFileDeploymentStepViewModel

<h5>@T["Custom File"]</h5>

<div class="mb-3">
    <div class="row">
        <div class="col-small col-12 col-sm-9 col-md-6 col-lg-3 col-xl-3">
            <span class="hint">@T["The custom file to add as part of the plan."]</span>
        </div>
    </div>
</div>

<div class="mb-3" asp-validation-class-for="FileName">
    <label asp-for="FileName" class="form-label">@T["File Name"]</label>
    <input asp-for="FileName" class="form-control" />
    <span asp-validation-for="FileName"></span>
    <span class="hint">@T["The filename as it will be added in the archive."]</span>
</div>

<div class="mb-3">
    <label asp-for="FileContent" class="form-label">@T["File Content"]</label>
    <code><textarea asp-for="FileContent" class="form-control"></textarea></code>
    <span class="hint">@T["The content of the file."]</span>
</div>
