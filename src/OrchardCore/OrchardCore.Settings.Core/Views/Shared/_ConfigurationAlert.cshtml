@using OrchardCore.Settings
@model SettingsConfigurationMetadata

@if (Model != null && Model.IsConfiguredFromFile)
{
    <div class="alert alert-info" role="alert">
        <h5 class="alert-heading">
            <i class="fa-solid fa-file-code me-2"></i>@T["Configuration File Active"]
        </h5>
        <p class="mb-2">@T["Some settings are configured via appsettings.json and may override values entered here."]</p>
        @if (Model.DisableUIConfiguration)
        {
            <p class="mb-0 fw-bold">@T["UI configuration is disabled. All settings are managed through configuration files."]</p>
        }
        else
        {
            <p class="mb-2 small">
                @T["Properties with the {0} badge are configured from files.", Html.Raw("<span class=\"badge text-bg-info\">Config File</span>")]
            </p>

            var overriddenProperties = Model.GetOverriddenProperties().ToList();
            if (overriddenProperties.Count > 0)
            {
                <hr />
                <p class="mb-2 small fw-bold">@T["Overridden properties:"]</p>
                <ul class="mb-0 small">
                    @foreach (var prop in overriddenProperties)
                    {
                        <li>
                            @prop.DisplayName
                            @if (prop.IsSensitive)
                            {
                                <span class="text-muted">: @prop.GetMaskedValue()</span>
                            }
                            else if (prop.EffectiveValue != null)
                            {
                                <span class="text-muted">: @prop.EffectiveValue</span>
                            }
                        </li>
                    }
                </ul>
            }
        }
    </div>
}
