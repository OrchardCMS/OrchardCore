<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>OrchardCore.Sms</RootNamespace>
    <!-- NuGet properties-->
    <Title>OrchardCore SMS Core</Title>
    <Description>
      $(OCCMSDescription)

      Core Services for the SMS module.
    </Description>
    <PackageTags>$(PackageTags) OrchardCore Core</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="libphonenumber-csharp" />
    <PackageReference Include="Twilio" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OrchardCore.Infrastructure.Abstractions\OrchardCore.Infrastructure.Abstractions.csproj" />
    <ProjectReference Include="..\OrchardCore.Sms.Abstractions\OrchardCore.Sms.Abstractions.csproj" />
  </ItemGroup>

</Project>
