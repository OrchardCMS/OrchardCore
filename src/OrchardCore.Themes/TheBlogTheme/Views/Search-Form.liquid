{% assign index = Model.Index | default: '' %}
{% if index == '' %}
{% assign path = '~/search' %}
{% else %}
{% assign path = '~/search/' | append: index %}
{% endif %}

{% assign placeholder = Model.Placeholder | default: 'Enter your search term(s)' %}

<form action="{{ path | href }}" method="get">
    <div class="input-group mb-3 mt-5">
        <input name="Terms" type="text" class="form-control form-control-lg" value="{{ Model.Terms }}" placeholder="{{ placeholder }}" autofocus="" />
        <button type="submit" class="btn btn-primary btn-sm">{{ "Search" | t }}</button>
    </div>
</form>
