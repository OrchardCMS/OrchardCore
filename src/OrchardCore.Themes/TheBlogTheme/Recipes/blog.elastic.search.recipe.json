{
  "name": "Blog.Elastic.Search",
  "displayName": "Blog - Elastic Search",
  "description": "Creates Elastic settings, permission and indices.",
  "author": "The Orchard Core Team",
  "website": "https://orchardcore.net",
  "version": "1.0.0",
  "issetuprecipe": false,
  "categories": [ "default" ],
  "tags": [ "blog", "elastic" ],

  "steps": [
    {
      "name": "feature",
      "enable": [
        "OrchardCore.Search.Elastic"
      ]
    },
    {
      // Create the indices before the content items so they are indexed automatically.
      "name": "elastic-index",
      "Indices": [
        {
          "default_search": {
            "AnalyzerName": "standardanalyzer",
            "IndexLatest": false,
            "IndexedContentTypes": [
              "Article",
              "Blockquote",
              "Blog",
              "BlogPost",
              "Button",
              "Container",
              "Form",
              "ImageWidget",
              "Image",
              "Input",
              "Label",
              "LinkMenuItem",
              "Menu",
              "Page",
              "Paragraph",
              "RawHtml",
              "Select",
              "TextArea",
              "Validation",
              "ValidationSummary"
            ]
          }
        }
      ]
    },
    {
      // Create the search settings.
      "name": "Settings",
      "ElasticSettings": {
        "SearchIndex": "default_search",
        "DefaultSearchFields": [
          "Content.ContentItem.FullText"
        ]
      }
    },
    {
      // Create the search index permissions.
      "name": "Roles",
      "Roles": [
        {
          "Name": "Anonymous",
          "Description": "Anonymous role",
          "Permissions": [
            "ViewContent",
            "QueryElasticSearchIndex"
          ]
        }
      ]
    }
  ]
}
