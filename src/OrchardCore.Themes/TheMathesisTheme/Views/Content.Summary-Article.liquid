<div class="card card-plain card-blog">
	<div class="row">
		<div class="col-md-4">
			<div class="card-header card-header-image">
				<img class="img" src="{{Model.ContentItem.Content.Article.Image.Paths.first | asset_url }}">
			</div>
		</div>
		<div class="col-md-8">
			<h3 class="card-title">
				<a href="{{Model.ContentItem | display_url }}">{{Model.ContentItem.Content.TitlePart.Title }}</a>
			</h3>
			<p>
				{% assign tags = Model.ContentItem.Content.Article.Tags.Text | split: "," %}
				{% for tag in tags %}
					<span class="badge badge-primary badge-pill">{{tag}}</span>
				{% endfor %}
			</p>
			<p class="card-description mth-text-base">
				{{Model.ContentItem.Content.MainContent.ContentItems.first.HtmlBodyPart.Html | truncate: 300}}
				<a href="{{Model.ContentItem | display_url }}">&nbsp;Read More</a>
			</p>
			<p class="author">
				by <b>{{Model.ContentItem.Content.MainContent.ContentItems.first.Author}}</b>, <span id="{{Model.ContentItem.Content.MainContent.ContentItems.first.ModifiedUtc | slugify }}"></span>
				<script type="text/javascript">
					var time = moment.utc('{{Model.ContentItem.Content.MainContent.ContentItems.first.ModifiedUtc}}').fromNow();
					document.getElementById("{{Model.ContentItem.Content.MainContent.ContentItems.first.ModifiedUtc | slugify }}").innerHTML = time;
				</script>
			</p>
		</div>
	</div>
</div>