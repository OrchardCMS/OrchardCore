<div class="w-90 mx-auto">
	{% if Model.ContentItem.Content.HorizontalContent.Side.Value %}
	<div class="card card-plain">
		<div class="row">
			<div class="col-md-4">
				<div class="card-header card-header-image">
					<img class="img" src="{{Model.ContentItem.Content.HorizontalContent.Image.Paths.first | asset_url }}"/>
				</div>
			</div>
			<div class="col-md-8">
				<h6 class="card-category text-primary">
					<i class="material-icons">{{Model.ContentItem.Content.HorizontalContent.IconClass.Text}}</i>&nbsp;{{Model.ContentItem.Content.HorizontalContent.SectionName.Text}}
				</h6>
				<h3 class="card-title">
					<a href="{{Model.ContentItem.Content.HorizontalContent.Title.Url | href}}">{{Model.ContentItem.Content.HorizontalContent.Title.Text}}</a>
				</h3>
				<p class="card-description mth-text-base">
					{{Model.ContentItem.Content.HorizontalContent.Description.Text}}
				</p>
			</div>
		</div>
	</div>
	{% else %}
	<div class="card card-plain">
		<div class="row">
			<div class="col-md-8">
				<h6 class="card-category text-primary">
					<i class="material-icons">{{Model.ContentItem.Content.HorizontalContent.IconClass.Text}}</i>&nbsp;{{Model.ContentItem.Content.HorizontalContent.SectionName.Text}}
				</h6>
				<h3 class="card-title">
					<a href="{{Model.ContentItem.Content.HorizontalContent.Title.Url | href}}">{{Model.ContentItem.Content.HorizontalContent.Title.Text}}</a>
				</h3>
				<p class="card-description mth-text-base">
					{{Model.ContentItem.Content.HorizontalContent.Description.Text}}
				</p>
			</div>
			<div class="col-md-4">
				<div class="card-header card-header-image">
					<img class="img img-raised" src="{{Model.ContentItem.Content.HorizontalContent.Image.Paths.first | asset_url }}"/>
				</div>
			</div>
		</div>
	</div>
	{% endif%}
</div>