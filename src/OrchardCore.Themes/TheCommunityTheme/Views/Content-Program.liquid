{% zone "Header" %}
{% assign imagePath = Model.ContentItem.Content.Program.Image.Paths.first %}
{% if imagePath %}
<header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url: profile: "hero" }}')">
{% else %}
<header class="masthead" style="background-image: url('{{ "~/TheCommunityTheme/assets/img/hero/fitness.svg" | href }}')">
{% endif %}
    <div class="container">
        <div class="masthead-heading">{{ Model.ContentItem | display_text }}</div>
        {% assign category = Model.ContentItem.Content.Program.Category | taxonomy_terms %}
        {% for term in category %}
        <span class="badge bg-light text-dark fs-6">{{ term | display_text }}</span>
        {% endfor %}
    </div>
</header>
{% endzone %}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                {{ Model.Content.HtmlBodyPart | shape_render }}
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ "Program Details" | t }}</h5>
                        {% assign price = Model.ContentItem.Content.Program.Price.Text %}
                        {% if price and price != "" %}
                        <p><strong>{{ "Price" | t }}:</strong> {{ price }}</p>
                        {% endif %}
                        {% assign schedule = Model.ContentItem.Content.Program.Schedule.Text %}
                        {% if schedule and schedule != "" %}
                        <p><strong>{{ "Schedule" | t }}:</strong> {{ schedule }}</p>
                        {% endif %}
                        {% assign ageGroups = Model.ContentItem.Content.Program.AgeGroup | taxonomy_terms %}
                        {% if ageGroups.size > 0 %}
                        <p><strong>{{ "Age Group" | t }}:</strong>
                            {% for ag in ageGroups %}
                            <span class="badge bg-info">{{ ag | display_text }}</span>
                            {% endfor %}
                        </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
