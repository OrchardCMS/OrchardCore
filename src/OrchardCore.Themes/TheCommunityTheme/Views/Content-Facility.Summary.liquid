<div class="col-md-6 col-lg-4 mb-4">
    <div class="card facility-card h-100">
        {% assign imagePath = Model.ContentItem.Content.Facility.Image.Paths.first %}
        {% if imagePath %}
        <img class="card-img-top" src="{{ imagePath | asset_url | resize_url: profile: 'card' }}" alt="{{ Model.ContentItem | display_text }}">
        {% endif %}
        <div class="card-body">
            <h5 class="card-title"><a href="{{ Model.ContentItem | display_url }}" class="text-decoration-none text-dark">{{ Model.ContentItem | display_text }}</a></h5>
            {% assign capacity = Model.ContentItem.Content.Facility.Capacity.Value %}
            {% if capacity %}
            <p class="text-muted small"><i class="fas fa-users me-1"></i>{{ "Capacity" | t }}: {{ capacity }}</p>
            {% endif %}
        </div>
    </div>
</div>
