{% zone "Header" %}
{% assign imagePath = Model.ContentItem.Content.GardenZone.Image.Paths.first %}
{% if imagePath %}
<header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url: profile: "hero" }}')">
{% else %}
<header class="masthead" style="background-image: url('{{ "~/TheCommunityTheme/assets/img/hero/botanical-garden.svg" | href }}')">
{% endif %}
    <div class="container">
        <div class="masthead-heading">{{ Model.ContentItem | display_text }}</div>
    </div>
</header>
{% endzone %}

<section class="py-5">
    <div class="container">
        {{ Model.Content | shape_render }}
    </div>
</section>
