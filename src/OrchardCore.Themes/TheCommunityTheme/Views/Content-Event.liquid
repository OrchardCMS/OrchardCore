{% zone "Header" %}
{% assign imagePath = Model.ContentItem.Content.Event.Image.Paths.first %}
{% if imagePath %}
<header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url: profile: "hero" }}')">
{% else %}
<header class="masthead" style="background-image: url('{{ "~/TheCommunityTheme/assets/img/hero/community-center.svg" | href }}')">
{% endif %}
    <div class="container">
        <div class="masthead-heading">{{ Model.ContentItem | display_text }}</div>
        {% assign eventType = Model.ContentItem.Content.Event.EventType | taxonomy_terms %}
        {% for term in eventType %}
        <span class="badge bg-light text-dark fs-6">{{ term | display_text }}</span>
        {% endfor %}
    </div>
</header>
{% endzone %}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                {{ Model.Content.HtmlBodyPart | shape_render }}
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ "Event Details" | t }}</h5>
                        {% assign eventDate = Model.ContentItem.Content.Event.EventDate.Value %}
                        {% if eventDate %}
                        {% assign format = "MMMM dd, yyyy" | t %}
                        {% assign dateStr = "DateTime" | shape_new: utc: eventDate, format: format | shape_stringify %}
                        <p><strong>{{ "Date" | t }}:</strong> {{ dateStr }}</p>
                        {% endif %}
                        {% assign regLink = Model.ContentItem.Content.Event.RegistrationLink %}
                        {% if regLink.Url and regLink.Url != "" %}
                        <a href="{{ regLink.Url }}" class="btn btn-primary w-100">{{ regLink.Text | default: "Register Now" | t }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
