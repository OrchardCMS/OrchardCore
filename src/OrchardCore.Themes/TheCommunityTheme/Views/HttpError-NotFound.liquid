{% zone "Header" %}
<header class="masthead" style="background-image: url('{{ "~/TheCommunityTheme/assets/img/hero/community-center.svg" | href }}')">
    <div class="container">
        <div class="masthead-heading">{{ "Page Not Found" | t }}</div>
        <div class="masthead-subheading">{{ "Sorry, the page you're looking for doesn't exist." | t }}</div>
    </div>
</header>
{% endzone %}

<section class="py-5">
    <div class="container text-center">
        <a href="{{ '~/' | href }}" class="btn btn-primary btn-xl">{{ "Return Home" | t }}</a>
    </div>
</section>
