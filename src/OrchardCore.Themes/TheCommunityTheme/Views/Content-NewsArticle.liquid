{% zone "Header" %}
{% assign imagePath = Model.ContentItem.Content.NewsArticle.Image.Paths.first %}
{% if imagePath %}
<header class="masthead" style="background-image: url('{{ imagePath | asset_url | resize_url: profile: "hero" }}')">
{% else %}
<header class="masthead" style="background-image: url('{{ "~/TheCommunityTheme/assets/img/hero/community-center.svg" | href }}')">
{% endif %}
    <div class="container">
        <div class="masthead-heading">{{ Model.ContentItem | display_text }}</div>
        {% assign format = "MMMM dd, yyyy" | t %}
        {% assign dateStr = "DateTime" | shape_new: utc: Model.ContentItem.CreatedUtc, format: format | shape_stringify %}
        <div class="masthead-subheading">{{ "Posted on {0}" | t: dateStr }}</div>
    </div>
</header>
{% endzone %}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {{ Model.Content.MarkdownBodyPart | shape_render }}
                <hr class="my-4">
                {% assign tags = Model.ContentItem.Content.NewsArticle.Tags | taxonomy_terms %}
                {% if tags.size > 0 %}
                <div class="mb-3">
                    <i class="fas fa-tags me-2"></i>
                    {% for tag in tags %}
                    <span class="badge bg-secondary">{{ tag | display_text }}</span>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
