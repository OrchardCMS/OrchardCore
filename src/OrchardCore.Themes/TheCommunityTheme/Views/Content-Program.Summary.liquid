<div class="col-md-6 col-lg-4 mb-4">
    <div class="card program-card h-100">
        {% assign imagePath = Model.ContentItem.Content.Program.Image.Paths.first %}
        {% if imagePath %}
        <img class="card-img-top" src="{{ imagePath | asset_url | resize_url: profile: 'card' }}" alt="{{ Model.ContentItem | display_text }}">
        {% endif %}
        <div class="card-body">
            {% assign category = Model.ContentItem.Content.Program.Category | taxonomy_terms %}
            {% for term in category %}
            <span class="badge bg-primary mb-2">{{ term | display_text }}</span>
            {% endfor %}
            <h5 class="card-title"><a href="{{ Model.ContentItem | display_url }}" class="text-decoration-none text-dark">{{ Model.ContentItem | display_text }}</a></h5>
            {% assign price = Model.ContentItem.Content.Program.Price.Text %}
            {% if price and price != "" %}
            <p class="text-muted small">{{ price }}</p>
            {% endif %}
        </div>
    </div>
</div>
