<div class="post-preview">
    <a display-for="@Model.ContentItem">
        <h2 class="post-title">
            @Model.ContentItem.Content.TitlePart.Title
        </h2>
        <h3 class="post-subtitle">
            @Model.ContentItem.Content.BlogPost.Subtitle.Text
        </h3>
    </a>
    <p class="post-meta">
        @T["Posted by {0} on {1}", 
            Html.Raw($"<a href=\"#\">{Model.ContentItem.ModifiedBy}</a>"), 
            (object)Model.ContentItem.CreatedUtc.ToString("MMMM dd, yyyy")]
    </p>

    @*@Html.Raw(Model.ContentItem.Content.BodyPart.Body)*@
</div>
<hr>
