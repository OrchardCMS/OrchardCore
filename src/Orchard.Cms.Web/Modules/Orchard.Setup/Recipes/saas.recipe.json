{
  "name": "SaaS",
  "displayName": "Software as a Service",
  "description": "Provides default SaaS features.",
  "author": "The Orchard Team",
  "website": "http://orchardproject.net",
  "version": "2.0",
  "issetuprecipe": true,
  "categories": [ "default" ],
  "tags": [ "developer", "default" ],
  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        // SaaS
        "Orchard.Mvc",
        "Orchard.Admin",
        "Orchard.Commons",
        "Orchard.Diagnostics",
        "Orchard.DynamicCache",
        "Orchard.Modules",
        "Orchard.Navigation",
        "Orchard.Recipes",
        "Orchard.Resources",
        "Orchard.Roles",
        "Orchard.Settings",
        "Orchard.Tenants",
        "Orchard.Themes",
        "Orchard.Users",

        // Themes
        "TheTheme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "TheTheme"
    },
    {
      "name": "settings",
      "HomeRoute": {
        "Action": "Index",
        "Controller": "Home",
        "Area": "Orchard.Commons"
      }
    }
  ]
}